@model IEnumerable<CmsShop.Models.ViewModels.Shop.CategoryVM>

@{
    ViewBag.Title = "Sklep kategorie";
}

<h2>Sklep kategorie</h2>

<div class="new-cat">
    <input type="text" id="newCatName" />
    <p>
        <a href="#" id="newCata">Dodaj nową kategorię</a>
        <span class="ajax-text">
            <img  src="~/Content/img/ajax-loader.gif" width="20" height="20" />
        </span>
    </p>
</div>

@if (!Model.Any())
{
    <h1 class="text-center">Nie ma żadnych kategorii.</h1>
}
else
{

<table class="table sorting" id="pages">
    <tr class="home">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control", @readolny = "readonly" } })
            </td>
            <td>
                @Html.ActionLink("Usuń", "DeleteCategory", new { id = item.Id }, new { @class = "delete" })
            </td>
        </tr>
    }

</table>

}